{
    "name": "Localisr",
    "version": "0.1.2",
    "manifest_version": 2,
    "description": "In-page conversion of foreign prices.",
    "browser_action": {
        "default_icon": "icon128.png"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["lib/jquery.js", "lib/money.js", "lib/accounting.js", "lib/moment.js"]
        }
    ],
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],
    "background": {
        "scripts": ["lib/jquery.js", "loader.js"]
    },
    "options_page": "options.html"
}
