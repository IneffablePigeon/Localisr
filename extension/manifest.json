{
  "name": "Localise",
  "version": "1.0",
  "manifest_version": 2,
  "description": "In-page conversion of foreign times and prices.",
  "browser_action": {
    "default_icon": "icon.png"
    // "default_popup": "popup.html"

  },
  "content_scripts": [
    {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["jquery.js"]
    }
  ],
  "permissions": [
    // "http://api.flickr.com/",
    "tabs", "http://*/*", "https://*/*"
  ],
  "background": { "scripts": ["jquery.js", "main.js"] }
}
